<UserControl x:Class="Sponge.View.Common.UpdateIsingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sponge.View.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>


        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <local:UpdateControl
                    DataContext="{Binding UpdateVm}"/>
                
                <TextBlock Margin="0,5,0,0">Beta</TextBlock>
                <Viewbox Stretch="Uniform" Height="22">
                    <TextBlock Text="{Binding Beta, StringFormat=N5}" FontSize="16" FontWeight="Bold" Height="22"/>
                </Viewbox>

                <TextBlock Margin="0,5,0,0">Energy</TextBlock>
                <TextBlock Text="{Binding Energy}" FontSize="16" FontWeight="Bold"/>

                <TextBlock Margin="0,5,0,0">Flip</TextBlock>
                <CheckBox IsChecked="{Binding Flip}" FontSize="16" FontWeight="Bold"/>
                
            </StackPanel>

            <TabControl Grid.Column="1">
                <TabItem Header="Energy">
                    <local:GraphControl DataContext="{Binding GraphVm}" />
                </TabItem>
                <TabItem Header="Energy">
                    <local:GraphLatticeControl DataContext="{Binding GraphLatticeVm}" />
                </TabItem>

            </TabControl>


        </Grid>


    </Grid>
</UserControl>
